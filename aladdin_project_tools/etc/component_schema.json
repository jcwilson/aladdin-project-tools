{
    "$schema": "https://json-schema.org/draft-07/schema#",

    "definitions": {
        "packages": {
            "description": "Additional apt packages to be installed",
            "type": "array",
            "items": {
                "type": "string"
            },
            "default": []
        },
        "standard_image": {
            "description": "Build an image following the component model.",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "packages": {"$ref": "#/definitions/packages"},
                "user": {
                    "description": "Define the image user details.",
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "create": {
                            "description": "Whether or not to create this user",
                            "type": "boolean",
                            "default": true
                        },
                        "name": {
                            "description": "The container user's name. Used for chown purposes.",
                            "type": "string",
                            "default": "aladdin-user"
                        },
                        "group": {
                            "description": "The container user's main group. Used for chown purposes.",
                            "type": "string",
                            "default": "aladdin-user"
                        },
                        "home": {
                            "description": "The container user's home directory. Will contain the installed python packages.",
                            "type": "string",
                            "default": "/home/aladdin-user"
                        },
                        "sudo": {
                            "description": "If creating this user, also add them to the sudoers group. Defaults to True if building in dev mode.",
                            "type": "boolean",
                            "default": false
                        }
                    }
                },
                "workdir": {
                    "description": "The image's WORKDIR directory",
                    "type": "string",
                    "default": "/code"
                }
            }
        },
        "compatible_image": {
            "description": "Build an image based on an alternative base image. This will not apply the component model boilerplate, but will allow you to compose other components' code and dependencies into it.",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "base": {
                    "description": "Use this image instead of the language-derived base image.",
                    "type": "string",
                    "examples": [
                        "fivestarsos/commands-base:2.0.0",
                        "jupyter/minimal-notebook:dc9744740e12"
                    ]
                },
                "packages": {"$ref": "#/definitions/packages"},
                "user": {
                    "description": "Define the image user details.",
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "create": {
                            "description": "Whether or not to create this user",
                            "type": "boolean",
                            "default": false
                        },
                        "name": {
                            "description": "The container user's name. Used for chown purposes.",
                            "type": "string"
                        },
                        "group": {
                            "description": "The container user's main group. Used for chown purposes.",
                            "type": "string"
                        },
                        "home": {
                            "description": "The container user's home directory. Will contain the installed python packages.",
                            "type": "string"
                        },
                        "sudo": {
                            "description": "If creating this user, also add them to the sudoers group. Defaults to True if building in dev mode.",
                            "type": "boolean",
                            "default": false
                        }
                    },
                    "required": ["name", "group", "home"]
                }
            },
            "required": ["base", "user"]
        }
    },

    "title": "Component",
    "description": "Configuration for customizing the component image build process.",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "meta": {
            "description": "Data used for determining which schema to use.",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "version": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 1
                }
            },
            "required": ["version"]
        },
        "language": {
            "description": "The build system will locate an appropriate base image for the given language information.",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "description": "The component's implementation language.",
                    "type": "string",
                    "enum": ["python"],
                    "default": "python"
                },
                "version": {
                    "description": "The language version.",
                    "type": "string",
                    "default": "3.8",
                    "examples": [
                        "3.7",
                        "3.8.2"
                    ]
                }
            }
        },
        "image": {
            "anyOf": [
                {"$ref": "#/definitions/standard_image"},
                {"$ref": "#/definitions/compatible_image"}
            ]
        },
        "dependencies": {
            "description": "The other components that need to be aggregated into this component.",
            "type": "array",
            "items": {
                "type": "string"
            },
            "uniqueitems": true,
            "default": [],
            "examples": [
                ["shared"],
                ["api", "commands"]
            ]
        }
    },
    "required": ["meta"]
}
